#!/bin/bash

DATA_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

# Abort if no JSON files are present
shopt -s nullglob
json_files=("$DATA_DIR"/*.json)
if [ ${#json_files[@]} -eq 0 ]; then
  echo "No JSON files found in $DATA_DIR — run batchProcessing-0x02 first."
  exit 1
fi

# CSV header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Build the CSV rows
for f in "${json_files[@]}"; do
  jq -r '[.name, (.height/10), (.weight/10)] | @tsv' "$f" |
    awk -v OFS=',' '{
      # Capitalize first letter of the name for nicer output
      name = toupper(substr($1,1,1)) substr($1,2)
      printf "%s,%.1f,%.1f\n", name, $2, $3
    }' >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo

# Display the CSV (optional—comment out if not needed)
cat "$CSV_FILE"
echo

# Calculate and print averages (skip header row)
awk -F',' 'NR>1 {sum_h+=$2; sum_w+=$3; n++}
END {
  printf "Average Height: %.2f m\n", sum_h/n
  printf "Average Weight: %.2f kg\n", sum_w/n
}' "$CSV_FILE"
