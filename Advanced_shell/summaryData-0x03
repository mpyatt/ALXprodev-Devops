#!/bin/bash
# Build a CSV report from pokemon_data/*.json and show average height/weight.
# Tools used: jq, awk, sed  (sed is used to strip any trailing .0 for neatness)

DATA_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

shopt -s nullglob
json_files=("$DATA_DIR"/*.json)

if [ ${#json_files[@]} -eq 0 ]; then
  echo "No JSON files found in $DATA_DIR â€” run batchProcessing scripts first."
  exit 1
fi

# Header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

for f in "${json_files[@]}"; do
  jq -r '[.name, (.height/10), (.weight/10)] | @tsv' "$f" |
  awk -v OFS=',' '{
    name = toupper(substr($1,1,1)) substr($1,2)
    printf "%s,%.2f,%.2f\n", name, $2, $3
  }' |
  # Use sed to drop trailing .0 (e.g., 2.00 -> 2, 1.20 -> 1.2)
  sed -E 's/\.0+(\,|$)/\1/g' >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo

# Show the CSV (optional)
cat "$CSV_FILE"
echo

# Compute averages with awk
awk -F',' 'NR>1 {h+=$2; w+=$3; n++}
END {
  avg_h = h/n; avg_w = w/n
  # Use sed via a command pipeline to trim any trailing .00
  printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", avg_h, avg_w
}' "$CSV_FILE" | sed -E 's/\.00/\.0/g'
